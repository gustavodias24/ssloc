<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrool"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/nomeImagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nome imagem" />

        <Button
            android:id="@+id/enviarImagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="enviar imagem" />

        <EditText
            android:id="@+id/editTextDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="descrição"
            android:inputType="text" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioDisponivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="disponível" />

            <RadioButton
                android:id="@+id/radioIndisponivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="indisponível" />
        </RadioGroup>

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ok" />
    </LinearLayout>
</ScrollView>