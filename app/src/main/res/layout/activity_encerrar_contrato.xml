<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".activitys.EncerrarContratoActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            tools:srcCompat="@raw/logoparada" />

        <ImageView
            android:id="@+id/encerramento"
            android:layout_width="match_parent"
            android:layout_height="187dp"
            tools:srcCompat="@raw/termoencerracao" />

        <ImageView
            android:id="@+id/encerramentocontrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@raw/recisaocontrato" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Assinatura:"
            android:textColor="#5E5B5B" />

        <com.github.gcacace.signaturepad.views.SignaturePad
            android:id="@+id/assinaturaPad"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:penColor="@android:color/black" />

        <RadioButton
            android:id="@+id/checkTermos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Li e aceito os termos do contrato" />

        <Button
            android:id="@+id/encerrarBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="Encerrar"
            android:textColor="#FF0000" />

    </LinearLayout></ScrollView>